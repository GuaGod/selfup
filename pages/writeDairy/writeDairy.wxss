/* pages/writeDairy/writeDairy.wxss */
page {
  overflow: auto !important;
  padding-bottom:40rpx;
}

.header_container {
   height: 32rpx;
   line-height: 32rpx;
   display: flex;
   align-items: center;
}


.header_title {
   height:38rpx;
   margin-top:4rpx;
   color: rgb(137, 137, 137);
   font-size:38rpx;
}

.dairy_container {
  height:calc(100% - 150rpx);
  width:100%;
  box-sizing:border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.camera {
  width: 100%;
  height: 556rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-size:cover;
}

.camera_icon {
  width: 84rpx;
  height: 69rpx;
  display: block;
}

.remote_Image {
  width:100%;
  height: 100%;
  display: block;
}


.content .title {
  width: 680rpx;
  margin:44rpx auto 0;
  height:104rpx;
  line-height:104rpx;
  font-size:56rpx;
  border-bottom:2rpx solid rgb(232, 231, 232);
  color:rgb(143, 134, 134);
}

.content .text {
  width: 650rpx;
  color: rgb(154, 146, 146);
  overflow: hidden;
  font-size:32rpx;
  margin: 34rpx auto 0;
  min-height: 350rpx;
}

.content .submit {
  position:absolute;
  right:30rpx;
  z-index:100;
  width:150rpx;
  height:62rpx;
  text-align:center;
  line-height:62rpx;
  overflow: hidden;
  color:white;
  background:linear-gradient(to top right, #ffcdcb, #bfcefe);
  box-shadow:0 8rpx 16rpx #bfcefe;
  border-radius:16rpx;
  font-size:32rpx;
}



/* pages/dairy/dairy.wxss */
page {
  height: 100%;
  overflow: auto;
}

s-header {
  position: relative;
  z-index: 7;
}

.header_container {
   height: 38rpx;
   line-height: 38rpx;
   display: flex;
   align-items: center;
}

.home_icon {
  height:42rpx;
  width:42rpx;
  display: block;
  margin-left:10rpx;
  margin-right:14rpx;
}


.header_title {
   height:38rpx;
   margin-top:4rpx;
   color: rgb(137, 137, 137);
   font-size:38rpx;
}

.container {
  overflow-y: auto;
  overflow-x: hidden;
  height:1200rpx;
  width:750rpx;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

.add_container {
   display: flex;
   justify-content: center;
   align-items: center;
}

.add {
   width:50rpx;
   height: 50rpx;
   display:block;
}

.wrap {
  padding: 17rpx 30rpx 17rpx 30rpx;
}

.box {
  width:100%;
  height:344rpx;
  border-radius: 40rpx;
  background:white;
  box-shadow: 0 8px 16px #bfcefe;
  padding:10rpx;
  box-sizing: border-box;
  overflow:hidden;
}

.title {
  height:110rpx;
  line-height:110rpx;
  font-size: 48rpx;
  color:rgb(165, 158, 158);
  font-weight:500;
  text-overflow: ellipsis;
  text-indent: 34rpx;
  white-space: nowrap;
  overflow: hidden;
  width:80%;
}

.content {
  height:144rpx;
  font-size:32rpx;
  color:rgb(143, 134, 134);
  text-indent: 66rpx;
}

.statement {
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  justify-content: space-between;
  text-indent: 34rpx;
}

.emotion {
  color:rgb(183, 212, 240);
  font-size: 28rpx;
}

.time {
  color: rgb(171, 166, 188);
  font-size: 28rpx;
  margin-right:10rpx;
}


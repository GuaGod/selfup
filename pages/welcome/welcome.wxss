/* pages/welcome/welcome.wxss */
.container {
  height:100%;
  width:100%;
  overflow:hidden;
  position:relative;
}

.bg {
  height:100%;
  width:100%;
  position:absolute;
  left:0rpx;
  top:0rpx;
  z-index:-100;
}

.content-container {
  width:100%;
  height:300rpx;
  position:absolute;
  z-index:100;
  bottom:0rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
}

.progress {
  color:white;
  width:100%;
  height:40rpx;
  line-height:40rpx;
  text-align:center;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.progress_bar {
  width:90%;
  height:100%;
  margin-bottom:10rpx;
}

.button {
  width:230rpx;
  height:86rpx;
  line-height:86rpx;
  color:#fff;
  background:rgb(191, 206, 254);
  box-shadow: 0 8rpx 16rpx rgba(191, 206, 254, 0.8);
  border: none;
}

.button-hide {
  opacity: 0;
}

<swiper class="container" bindchange="changeStep" current="{{currentStep}}">
  <!--选择男女-->
  <swiper-item>
    <view class="chooseSex_container">
      <view class="title">
         让我们来了解一下你ヾ(´･ω･｀)ﾉ
      </view>

      <view class="chooseSex">
        <view class="sexBox sexBox_male" bindtap="chooseSex" data-sex="1">
          <image src="https://www.steins.club/selfup/imgs/element/male.png" class="sexBox_content" />
          <text>男生♂</text>
        </view>
        <view class="sexBox sexBox_female" bindtap="chooseSex" data-sex="0">
          <image src="https://www.steins.club/selfup/imgs/element/female.png" class="sexBox_content" />
          <text>女生♀</text>
        </view>
      </view>
    </view>
  </swiper-item>

  <!--创建出人物-->
  <swiper-item class="createPerson_container">
    <view class="quesBox">
      <image src="{{question}}"></image>
    </view>

    <view class="answerBox">
      <block wx:for="{{answerList}}">
        <view data-answer="{{item.value}}" bindtap="answerQuestion"
              class="quesAnswer_box">{{item.name}}</view>
      </block>
    </view>

    <view class="person_container">
      <s-myImage wx:if="{{sex === 0}}" img="femaleQues"></s-myImage>
      <s-myImage wx:else img="maleQues"></s-myImage>
    </view>

  </swiper-item>

  <!--完成创建-->
  <swiper-item>
    <view class="self_container">

      <view class="person_created_container">
        <image src="{{hair}}" class="hair"></image>
        <image src="{{head}}" class="head"></image>
        <image src="{{cloth}}" class="cloth"></image>
        <image src="{{body}}" class="body"></image>
        <image src="{{background}}" class="background"></image>
      </view>

      <button bindtap="completeCreate" class="completeCreate" class="home">进入主页</button>
    </view>

    <i-spin custom fix wx:if="{{!isCreateComplete}}">
      <i-icon type="refresh" size="40" i-class="icon-load"></i-icon>
      <view>人物生成中</view>
    </i-spin>

  </swiper-item>
</swiper>